{% extends "AppBundle:Layouts:layout.html.twig" %}

{% block javascripts %}
	{{parent()}}
	<script type="text/javascript" src="{{asset('assets/js/custom/home.js')}}"></script>
{% endblock %}

{% block content %}
	<div class="container">
		<div id="timeline" class="col-lg-7 box-default pull-left">
			<h1 class="box-header">Lista de Publicaciones</h1>
			
			<div class="box-content">
				{% for publication in pagination %}
					<div class="col-lg-12 publication-item">
						<div class="avatar">
							{% if publication.user.image == null %}
								<img src="{{ asset('assets/images/default.png')}}">
							{% else %}
								<img src="{{ asset('uploads/users/'~publication.user.image)}}">
							{% endif %}
						</div>
						<div class="publication-item-content">
							<p>
								<a class="pub-name-link" href="{{path('user_profile', {'nickname':publication.user.nickname})}}">{{publication.user.name}} {{publication.user.surname}}</a>
								-
								{{publication.user.nickname}}
								-
								<span class="pub-date">
									{{publication.createdAt|date('l j M Y g:ia')|replace({
										'January'  : 'Enero',
										'February' : 'Febrero',
										'March' : 'Marzo',
										'April' : 'Abril',
										'May' : 'Mayo',
										'June' : 'Junio',
										'July' : 'Julio',
										'August' : 'Agosto',
										'September' : 'Septiembre',
										'October' : 'Octubre',
										'November' : 'Noviembre',
										'December' : 'Diciembre',
										'Monday'   : 'Lunes',
										'Tuesday' : 'Martes',
										'Wednesday' : 'Miercoles',
										'Thursday' : 'Jueves',
										'Friday' : 'Viernes',
										'Saturday' : 'Sabado',
										'Sunday'   : 'Domingo'})}} <br>{{publication.createdAt|long_time}}
								</span>
							</p>
							<p>{{publication.text}}</p>
							{% if(publication.user.id is defined) and (publication.user.id == app.user.id) or app.user.role == "ROLE_ADMIN" %}
								<span data-id="{{publication.id}}" class="btn-delete-pub glyphicon glyphicon-trash" aria-hidden="true"></span>
							{% endif %}
							
							{% if (publication.document is defined) and (publication.document != null) %}
								<a href="{{asset('uploads/publications/documents/'~publication.document)}}"
									class="btn-doc glyphicon glyphicon-save" aria-hidden="true" target="_blank"></a>
							{% endif %}
							
							{% if (publication.image is defined) and (publication.image != null) %}
								<span class="btn-img glyphicon glyphicon-picture" aria-hidden="true"></span>
								<div class="clearfix"></div>
								
								<div class="pub-image">
									<img src="{{asset('uploads/publications/images/'~publication.image)}}"></img>
								</div>
							{% endif %}
							
							<div class="pull-right like">
								<span data-id="{{publication.id}}" class="
									{% if app.user|liked(publication) == true  %}
										hidden
									{% endif %}
									btn-like glyphicon glyphicon-heart-empty" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" title="Me gusta">
								
								</span>
								<span data-id="{{publication.id}}" class="
									{% if app.user|liked(publication) == false  %}
										hidden
									{% endif %}
									btn-dislike active glyphicon glyphicon-heart-empty" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" title="No me gusta">
								
								</span>
							</div>
						</div>
						<div class="clearfix"></div>
						<hr>
					</div>
					
					
				{% endfor%}
				<div class="navigation">
					{{ knp_pagination_render(pagination) }}
				</div>
			</div>
		</div>
		<div id="user-card" class="col-lg-4 box-default pull-left">
			<div class="avatar">
				{% if app.user.image == null %}
					<img src="{{ asset('assets/images/default.png')}}">
				{% else %}
					<img src="{{ asset('uploads/users/'~app.user.image)}}">
				{% endif %}
			</div>
			
			<div class="name-surname">
				<a href="{{path('user_profile', {'nickname':app.user.nickname})}}">{{app.user.name}} {{app.user.surname}}</a>
				<div class="clearfix"></div>
				<span class="nickname">
					{{app.user.nickname}} 
				</span>				
			</div>
			
			<div class="clearfix"></div>
			
			{% set user_stats = app.user|user_stats %}
			
			<div class="following-data">
				<a href="{{path('following_users', {'nickname':app.user.nickname()}) }}">
					<span class="label-stat">Siguiendo</span>
					<span class="number-stat">{{user_stats.following}}</span>
				</a>
			</div>
			<div class="following-data">
				<a href="{{path('followed_users', {'nickname':app.user.nickname()}) }}">
					<span class="label-stat">Seguidores</span>
					<span class="number-stat">{{user_stats.followers}}</span>
				</a>
			</div>
			<div class="following-data">
				<a href="{{path('user_profile', {'nickname':app.user.nickname()}) }}">
					<span class="label-stat">Publicaciones</span>
					<span class="number-stat">{{user_stats.publications}}</span>
				</a>
			</div>
			<div class="following-data">
				<a href="{{path('likes_users', {'nickname':app.user.nickname()}) }}">
					<span class="label-stat">Me gustas</span>
					<span class="number-stat">{{user_stats.likes}}</span>
				</a>
			</div>
		</div>
		<div id="new-publication" class="col-lg-4 box-default pull-left">
			<h1 class="box-header">Crear publicacion </h1>
			<div class="form-group">
			{{form_start(form, {action:'','method':'POST'})}}
			{{form_end(form)}}
			</div>
		</div>
		</div>
	</div>
{% endblock %}