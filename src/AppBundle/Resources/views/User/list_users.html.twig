{% extends "AppBundle:Layouts:layout.html.twig" %}
{% block javascripts %}
	{{parent()}}
	<script src="{{ asset('assets/js/custom/users.js')}}"></script>
	<script src="{{ asset('assets/js/custom/buttons-following.js')}}"></script>
{% endblock %}
{% block content %}
	<div class="container">
	
		<div class="col-lg-12 box-default">
			<h1>Gente</h1>
			<div class="count">
				<span class="label label-primary">
					Total de personas: {{ pagination.getTotalItemCount }}
				</span>
			</div>
			<hr>
			<div class="box-content box-users">
				{% for user in pagination %}
					<div class="col-lg-12 user-item">
						<div class="avatar">
							{% if user.image == null %}
								<img src="{{ asset('assets/images/default.png')}}">
							{% else %}
								<img src="{{ asset('uploads/users/'~user.image)}}">
							{% endif %}
						</div>
						<div class="user-item-content">
							<p>
							<a class="pub-name-link" href="{{path('user_profile', {'nickname':user.nickname})}}">
							{{user.name}} {{user.surname}} </a>
							- {{user.nickname}}</p>
							<p>{{user.bio}}</p>
						</div>
						
						{% if app.user.id != user.id %}
							<div class="pull-right buttoms-following">
								<button class="btn btn-sm btn-success btn-follow
									{% if app.user|following(user) == true %}
										hidden
									{% endif %}
									" 
									data-followed="{{user.id}}">
									<span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
									Seguir
								</button>
								
								<button class="btn btn-sm btn-default btn-unfollow
									{% if app.user|following(user) == false %}
										hidden
									{% endif %}
									" 
									data-followed="{{user.id}}">
									<span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
									Dejar de seguir
								</button>
								
								{% if app.user.role == "ROLE_ADMIN" %}
									
										<button class="btn btn-sm btn-deactive btn-warning
										{% if user.active != 1 %}
											hidden
										{% endif %}
										" data-actived="{{user.id}}">Desactivar</button>
									
										<button class="btn btn-sm btn-active btn-success
										{% if user.active == 1 %}
											hidden
										{% endif %}
										" data-actived="{{user.id}}">Activar</button>
										
										<button class="btn btn-sm btn-delete-user btn-danger" data-user="{{user.id}}">Eliminar</button>
									
								{% endif %}
							</div>
						{% endif %}
						
						<div class="clearfix"></div>
						<hr/>
					</div>
				{% endfor %}
			</div>
			<div class="navigation">
				{{ knp_pagination_render(pagination) }}
			</div>
			<div class="clearfix">
			</div>
		</div>
	</div>
{% endblock %}